{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/JJGarciaMartinez/hopsync-demo/main/manifest.schema.json",
  "title": "Hopsync Modpack Manifest Schema",
  "description": "Schema for Hopsync modpack manifest files",
  "type": "object",
  "additionalProperties": false,
  "required": ["modpack", "repository", "mods", "configs"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema for validation"
    },
    "modpack": {
      "type": "object",
      "description": "Modpack metadata displayed in the client",
      "additionalProperties": false,
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Display name of the modpack",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "description": "Modpack version (e.g., '1.0.0')",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the modpack"
        },
        "server_ip": {
          "type": ["string", "null"],
          "description": "Server IP address for players to connect"
        },
        "minecraft_version": {
          "type": "string",
          "description": "Required Minecraft version (e.g., '1.21.6')"
        }
      }
    },
    "repository": {
      "type": "object",
      "description": "URL configuration for file downloads",
      "additionalProperties": false,
      "required": ["base_url", "mods_path", "configs_path"],
      "properties": {
        "base_url": {
          "type": "string",
          "description": "Base URL of the repository (without trailing slash)",
          "format": "uri"
        },
        "mods_path": {
          "type": "string",
          "description": "Relative path to mods folder (e.g., 'mods/')",
          "pattern": "^[a-zA-Z0-9_-]+/$"
        },
        "configs_path": {
          "type": "string",
          "description": "Relative path to configs folder (e.g., 'configs/')",
          "pattern": "^[a-zA-Z0-9_-]+/$"
        }
      }
    },
    "mods": {
      "type": "array",
      "description": "List of mod filenames (auto-generated by GitHub Action)",
      "items": {
        "type": "string",
        "pattern": "^.+\\.jar$"
      }
    },
    "configs": {
      "type": "array",
      "description": "List of config filenames (auto-generated by GitHub Action)",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
